<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/cor_list"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="3dp">

        <ImageView
            android:id="@+id/image_noticia"
            android:layout_gravity="center"
            android:layout_width="@dimen/image_noticia_with"
            android:layout_height="@dimen/image_noticia_height"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/title_noticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/corTexto"
                android:text="Title"
                android:textStyle="bold"
                android:gravity="top|start"
                android:padding="@dimen/text_list_margin"
                />

            <TextView
                android:id="@+id/text_noticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/text_list_margin"
                android:paddingRight="@dimen/text_list_margin"
                android:text="sdfs"/>

            <TextView
                android:id="@+id/id_noticia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
